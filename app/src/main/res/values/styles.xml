<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--TextTitle-->
    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <!--TextSubtitle-->
    <style name="subtitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/merriweather_regular</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <!--TextBody-->

    <style name="textBody" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/merriweather_regular</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
